{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES6", "ES2022"],
    "target": "ES2022",
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test",
    "vite.config.ts",
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}